<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id: profile.xml 20156 2011-01-07 13:10:16Z eddieajau $ -->
<form>
	<fields 
		name="profile"
		addfieldpath="components/com_documentlibrary/models/fields"
		>
		<fieldset name="profile"
			label="PLG_USER_DLPROFILE_SLIDER_LABEL"
		>
			<field
					name="dob"
					type="calendar"
					label="PLG_USER_DLPROFILE_FIELD_DOB_LABEL"
					description="PLG_USER_DLPROFILE_FIELD_DOB_DESC"
					required="true"
			/>
			<field
				name="sex"
				type="list"
				id="sex"
				description="PLG_USER_DLPROFILE_FIELD_SEX_DESC"
				filter="string"
				label="PLG_USER_DLPROFILE_FIELD_SEX_LABEL"
				>
				<option value="1">PLG_USER_DLPROFILE_FIELD_SEX_MAN_OPTION</option>
				<option value="0">PLG_USER_DLPROFILE_FIELD_SEX_FEMALE_OPTION</option>
			</field>
			<field
				name="degree"
				type="list"
				id="degree"
				description="PLG_USER_DLPROFILE_FIELD_DEGREE_DESC"
				label="PLG_USER_DLPROFILE_FIELD_DEGREE_LABEL"
				>
				<option value="1">PLG_USER_DLPROFILE_FIELD_DEGREE_BACHELOR_OPTION</option>
				<option value="2">PLG_USER_DLPROFILE_FIELD_DEGREE_MASTER_OPTION</option>
				<option value="3">PLG_USER_DLPROFILE_FIELD_DEGREE_DOCTOR_OPTION</option>
			</field>
			<field
				name="subject"
				type="subjects"
				id="subject"
				description="PLG_USER_DLPROFILE_FIELD_SUBJECT_DESC"
				label="PLG_USER_DLPROFILE_FIELD_SUBJECT_LABEL"
				>
			</field>
			<field
				name="award"
				type="text"
				id="award"
				description="PLG_USER_DLPROFILE_FIELD_AWARD_DESC"
				filter="string"
				label="PLG_USER_DLPROFILE_FIELD_AWARD_LABEL"
				message="PLG_USER_DLPROFILE_FIELD_AWARD_MESSAGE"
				size="30"
			/>
			
			<field
				name="school"
				type="text"
				id="school"
				description="PLG_USER_DLPROFILE_FIELD_SCHOOL_DESC"
				filter="string"
				label="PLG_USER_DLPROFILE_FIELD_SCHOOL_LABEL"
				message="PLG_USER_DLPROFILE_FIELD_SCHOOL_MESSAGE"
				size="30"
			/>
			
			<field
				name="address1"
				type="text"
				id="address1"
				description="PLG_USER_DLPROFILE_FIELD_ADDRESS1_DESC"
				filter="string"
				label="PLG_USER_DLPROFILE_FIELD_ADDRESS1_LABEL"
				message="PLG_USER_DLPROFILE_FIELD_ADDRESS1_MESSAGE"
				size="30"
			/>

			<field
				name="address2"
				type="text"
				id="address2"
				description="PLG_USER_DLPROFILE_FIELD_ADDRESS2_DESC"
				filter="string"
				label="PLG_USER_DLPROFILE_FIELD_ADDRESS2_LABEL"
				message="PLG_USER_DLPROFILE_FIELD_ADDRESS1_MESSAGE"
				size="30"
			/>
		</fieldset>
	</fields>
</form>
